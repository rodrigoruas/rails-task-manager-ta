<div class="container">
  <h2>Adicionar Nova Tarefa </h2>
    <div class="row">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control' %>
        </div>

        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>
